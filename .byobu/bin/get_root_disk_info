#!/bin/sh

# df -h | grep -e '/$' | awk '{printf "%s/%s(%s)",$3,$2,$5}'
ROOT_DISK=`df | grep -e '/$'`

VAL=`echo ${ROOT_DISK} | awk '{printf "%d", $5}'`
STR_TB=`echo ${ROOT_DISK} | awk '{printf "%s/%s",$3/1024/1024/1024,$2/1024/1024/1024}'`
STR_GB=`echo ${ROOT_DISK} | awk '{printf "%s/%s",$3/1024/1024,$2/1024/1024}'`
STR_MB=`echo ${ROOT_DISK} | awk '{printf "%s/%s",$3/1024,$2/1024}'`
STR_KB=`echo ${ROOT_DISK} | awk '{printf "%s/%s",$3,$2}'`
STR=${STR_GB}

if   [ "`echo "$VAL < 20" | bc`" -eq "1" ]; then
    color=blue
elif [ "`echo "$VAL < 40" | bc`" -eq "1" ]; then
    color=green
elif [ "`echo "$VAL < 60" | bc`" -eq "1" ]; then
    color=yellow
elif [ "`echo "$VAL < 80" | bc`" -eq "1" ]; then
    color="colour166"  # orange
else
    color=red
fi

echo "${STR}(#[bg=$color]${VAL}%#[default])"

